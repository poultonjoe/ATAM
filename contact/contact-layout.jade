extend ../_partials/layout

block header
  != partial('../_partials/header')

block content
  != yield

block footer
  != partial('../_partials/footer')

block scripts
  script(type="text/javascript", src="http://maps.googleapis.com/maps/api/js?key=#{google_maps.api_key}&sensor=false")
  script.
    document.addEventListener('DOMContentLoaded', function(){
      var ll = new google.maps.LatLng(1.28173,103.85215);
      var mapOptions = {
        zoom: 15,
        center: ll
      };

      var map = new google.maps.Map(document.getElementById('map'), mapOptions);
      var marker = new google.maps.Marker({
        position: ll,
        map: map
      });
    });